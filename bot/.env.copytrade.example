# Watched target wallet address
WATCH_ADDRESS=0x2ACaC49b7920D80C3C329E30ca93D0C4b4849eC6

# 0x API key
OX_API_KEY=

# Follower wallet (burner) - MUST be EVM private key (Base), format: 0x + 64 hex
FOLLOWER_PRIVATE_KEY=0x
# Or read key from file containing an EVM private key
FOLLOWER_PRIVATE_KEY_FILE=

# Runtime
DRY_RUN=true
BASE_RPC_URL=https://mainnet.base.org
POLL_SECONDS=20
TRADE_ETH_AMOUNT=0.001
SLIPPAGE_BPS=200
COOLDOWN_SECONDS=120
MAX_TRADES_PER_HOUR=8
START_LOOKBACK_BLOCKS=8
MAX_BLOCK_SCAN_PER_CYCLE=20

# Auto-sell (mirror target sells)
AUTO_SELL_ENABLED=true
# Portion of follower token balance to sell on sell signal (1-10000 bps)
AUTO_SELL_BPS=10000
# Minimum token raw units required to execute sell
MIN_SELL_TOKEN_RAW=1

# Comma-separated token addresses to ignore
IGNORE_TOKENS=

# Optional custom state file path
# STATE_FILE=/absolute/or/relative/path.json
